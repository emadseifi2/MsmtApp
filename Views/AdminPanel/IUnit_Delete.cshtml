@model MsmtApp.Models.Class_IndustrialUnit
<!--Header-->
<div class="modal-header d-flex justify-content-center">
    <p class="heading text-center text-Medium text-x7 text-white">آیا از حذف این واحد مطمئن هستید؟</p>
</div>

<!--Body-->
<div class="modal-body">

    <hr />
    <div class="row">
        <div class="col-lg-7 col-md-7 col-12">
            <i class="fas fa-times text-x50 red-text animated rotateIn mt-4"></i>
        </div>
        <div class="col-lg-5 col-md-5 col-12">
            <img src="./images/Operation_Delete.png" class="img-fluid mx-auto" />
        </div>
        <div class="col-12 text-center text-Medium text-x7">
            <hr />
            <span class="text-Medium text-x7 dark-grey-text text-center">
                شما در حال حذف واحد صنفی با نام
            </span>
            <span class="text-Medium text-x7 red-text text-center">
                @Html.DisplayFor(model => model.UnitName)
            </span>
            <span class="text-Medium text-x7 dark-grey-text text-center">
                با مدیریت
            </span>
            <span class="text-Medium text-x7 red-text text-center">
                @Html.DisplayFor(model => model.ManagingName)
            </span>
            <span class="text-Medium text-x7 dark-grey-text text-center">
                به شماره سریال
            </span>           
            <span class="text-Medium text-x7 dark-grey-text text-center">
                واقع در استان
            </span>
            <span class="text-Medium text-x7 red-text text-center">
                @Html.DisplayFor(model => model.Province)
            </span>
            <span class="text-Medium text-x7 dark-grey-text text-center">
                می باشید
            </span>
        </div>
    </div>
</div>

<!--Footer-->
<div class="modal-footer flex-center">
    <form asp-controller="AdminPanel" asp-action="IUnit_Delete">
        <input type="submit" value="بله" class="btn btn-danger px-5" /> |
        <a class="btn waves-effect waves-light btn-info text-white py-2 px-5" data-dismiss="modal">خیر</a>
    </form>
</div>



