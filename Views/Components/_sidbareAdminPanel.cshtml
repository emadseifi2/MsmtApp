
<div class="sidebar_toggle"><a href="#"><i class="icon-close icons"></i></a></div>
<div class="pcoded-inner-navbar main-menu">
    @if (User?.Identity?.IsAuthenticated == true)
    {
        <div class="">
            <div class="main-menu-header">
                <img class="img-80 img-radius" src="./images/user.png" alt="User-Profile-Image">
                <div class="user-details">
                    <span id="more-details">@User.Identity.Name خوش آمدید !</span>
                    <ul class="w-75 mx-auto pt-1 px-0 mt-1 border-top">
                        <li class="d-inline-block mx-1">
                            <a asp-controller="#" asp-action="#">
                                <i class="fas fa-search text-white text-x8"></i>
                            </a>
                        </li>
                        <li class="d-inline-block mx-1">
                            <a asp-controller="Account" asp-action="Logout">
                                <i class="fas fa-sign-out-alt text-white text-x8"></i>
                            </a>
                        </li>
                        <li class="d-inline-block mx-1">
                            <a asp-controller="MapPanel" asp-action="OLView">
                                <i class="fas fa-globe text-white text-x8"></i>
                            </a>
                        </li>
                        <li class="d-inline-block mx-1">
                            <a asp-controller="#" asp-action="#">
                                <i class="fas fa-user-cog text-white text-x8"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="pcoded-navigation-label text-Bold text-x8 text-right">مدیریت اطلاعات پایه</div>
        <ul class="pcoded-item pcoded-left-item pr-3" dir="rtl">
            <li>
                <a asp-controller="MapPanel" asp-action="OLView" class="waves-effect waves-dark text-right">
                    <i class="fas fa-globe text-x10 text-success"></i>
                    <span class="pcoded-mtext mr-2">نمایش نقشه</span>
                </a>
            </li>
            <li>
                <a asp-controller="AdminPanel" asp-action="Main" class="waves-effect waves-dark text-right">
                    <i class="fa fa-home text-x10 text-success"></i>
                    <span class="pcoded-mtext mr-2">پنل مدیریت</span>
                </a>
            </li>
            <li>
                <a data-MangeProvince="true" class="waves-effect waves-dark text-right">
                    <i class="fa fa-home text-x10 text-success"></i>
                    <span class="pcoded-mtext mr-2">شهر ها و استان ها</span>
                </a>
            </li>
            <li>
                <a data-IGroupAll="true" class="waves-effect waves-dark text-right">
                    <i class="fa fa-database text-x10 text-success"></i>
                    <span class="pcoded-mtext mr-2">مدیریت گروه های 2 رقمی</span>
                </a>
            </li>
            <li>
                <a data-FDAGALL="true" class="waves-effect waves-dark text-right">
                    <i class="fa fa-database text-x10 text-success"></i>
                    <span class="pcoded-mtext mr-2">مدیریت گروه های 4 رقمی</span>
                </a>
            </li>
            <li>
                <a data-IUnitAll="true" class="waves-effect waves-dark text-right">
                    <i class="fa fa-industry text-x10 text-success"></i>
                    <span class="pcoded-mtext mr-2">مدیریت واحد های صنفی</span>
                </a>
            </li>
        </ul>
        <div class="pcoded-navigation-label text-Bold text-x8 text-right">گزارش ها</div>
        <ul class="pcoded-item pcoded-left-item pr-3" dir="rtl">
            <li>
                <a data-UnderConstruction="true" class="waves-effect waves-dark text-right">
                    <i class="fa fa-circle-o text-x10 text-success"></i>
                    <span class="pcoded-mtext mr-2">گروه های صنعتی</span>
                </a>
            </li>
            <li>
                <a data-UnderConstruction="true" class="waves-effect waves-dark text-right">
                    <i class="fa fa-circle-o text-x10 text-success"></i>
                    <span class="pcoded-mtext mr-2">واحد ها</span>
                </a>
            </li>
        </ul>
        <div class="pcoded-navigation-label text-Bold text-x8 text-right">مدیریت کاربران</div>
        <ul class="pcoded-item pcoded-left-item pr-3" dir="rtl">
            <li>
                <a data-UnderConstruction="true" class="waves-effect waves-dark text-right">
                    <i class="fa fa-circle-o text-x10 text-success"></i>
                    <span class="pcoded-mtext mr-2">مدیریت کاربران</span>
                </a>
            </li>
            <li>
                <a data-UnderConstruction="true" class="waves-effect waves-dark text-right">
                    <i class="fa fa-circle-o text-x10 text-success"></i>
                    <span class="pcoded-mtext mr-2">دسترسی ها</span>
                </a>
            </li>
        </ul>
